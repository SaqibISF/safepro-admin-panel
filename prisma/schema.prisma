generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(nanoid())
  name            String
  slug            String    @unique
  email           String    @unique
  password        String
  emailVerifiedAt DateTime?
  role            String    @default("user")
  appleId         String?   @unique
  googleId        String?   @unique
  passwordResetAt DateTime?
  lastLoginAt     DateTime?
  bannedAt        DateTime?
  banReason       String?
  paddleId        String?   @unique
  deletedAt       DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Token {
  id          String   @id @default(nanoid())
  accessToken String   @unique
  expiryDate  DateTime
  createdAt   DateTime @default(now())
}

model VPSServer {
  id         String  @id @default(nanoid())
  name       String?
  username   String
  ipAddress  String  @unique
  privateKey String?
  password   String?
  port       Int     @default(22)
  domain     String?
  status     Boolean @default(false)

  bandwidth               BigInt?
  ramLimit                BigInt?
  cpuLimit                BigInt?
  diskLimit               BigInt?
  bandWidthLimitPerSecond BigInt?

  healthScore        Float?
  cpuUsage           Float?
  ramUsage           Float?
  diskUsage          Float?
  totalMBitPerSecond Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
